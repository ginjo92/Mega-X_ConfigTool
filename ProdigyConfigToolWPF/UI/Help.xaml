                        </StackPanel>
                        <WebBrowser x:Name="HomeHelpViewer" Height="500" Margin="15"/>
                    </StackPanel>
                </TabItem>
                <!--AREAS-->
                <TabItem x:Name="MainAreasTab" Header="Zones" Visibility="Collapsed" >
