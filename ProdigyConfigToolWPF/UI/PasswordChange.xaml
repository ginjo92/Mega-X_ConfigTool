                                CornerRadius="20">
                                            <Image Source="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <ItemsControl>
                        <Grid Margin="0,20,0,0">
                            <RadioButton x:Name="RadioLocalePT" Content="images/portugal.png" Style="{StaticResource Flag}" IsChecked="True" BorderBrush="Green" Width="40" Height="40" HorizontalAlignment="Center" Margin="0,0,50,0" Grid.Column="2" Click="RadioLocalePT_Click"/>
                            <RadioButton x:Name="RadioLocaleEN" Content="images/united_kingdom.png" Style="{StaticResource Flag}" BorderBrush="Red" Width="40" Height="40" HorizontalAlignment="Center" Margin="50,0,0,0" Grid.Column="1" Click="RadioLocaleEN_Click"/>
                        </Grid>
                    </ItemsControl>
                </StackPanel>-->
            </StackPanel>
        </Border>
        <!--HELP FLYOUT-->
        <Controls:Flyout x:Name="HelpFlyout" 
                         HorizontalContentAlignment="Right" Background="#FF6E6A6A" 
                         Opacity="1" 
                         Header="{x:Static p:Resources.Help}" 
                         Margin="0" 
                         Position="Right" 
                         IsOpen="False" Width="168" HorizontalAlignment="Right" FontWeight="Bold">
            <StackPanel>
                <RichTextBox Background="#FFBBB7B7" Margin="5,20,5,0" IsReadOnly="True" >
                    <FlowDocument>
                        <Paragraph FontSize="18">
                            <Run Text="{x:Static p:Resources.Help_New_Password_H1_P1}" FontWeight="Bold"/>
                        </Paragraph>
                        <Paragraph FontStyle="Italic" TextAlignment="Left" FontSize="15" Foreground="#FF8D3939">
                            <Run Text="{x:Static p:Resources.Help_New_Password_H1_P2}"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </StackPanel>
        </Controls:Flyout>
    </Grid>
</Controls:MetroWindow>
