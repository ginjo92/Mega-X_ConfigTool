<Controls:MetroWindow x:Name="BaseWindow" x:Class="ProdigyConfigToolWPF.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"                      
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:ProdigyConfigToolWPF"
                      xmlns:p="clr-namespace:ProdigyConfigToolWPF.Properties"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:Behaviors="clr-namespace:ProdigyConfigToolWPF.Controls"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      mc:Ignorable="d"
                      xmlns:controls="clr-namespace:ProdigyConfigToolWPF.Controls"
                      xmlns:ProdigyConfigToolWPF="clr-namespace:ProdigyConfigToolWPF"
                      Title="Mega-X Config Tool" Height="768" Width="1024" Icon="/Resources/icon.ico"
                      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" WindowState="Maximized" Loaded="BaseWindow_Loaded" WindowStartupLocation="CenterScreen" ScrollViewer.HorizontalScrollBarVisibility="Visible" MinWidth="1024" MinHeight="768" Closing="BaseWindow_Closing" Background="WhiteSmoke">

    <Controls:MetroWindow.Resources>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <LinearGradientBrush x:Key="ProgressBarForeground" EndPoint="0.0,0.5" StartPoint="1.0,0.5">
            <GradientStop Color="#f47041" Offset="0.128"/>
            <GradientStop Color="#ebf441" Offset="0.515"/>
            <GradientStop Color="#a0f441" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ProgressBarBackground" EndPoint="1,0" StartPoint="0,0"/>

        <Style x:Key="LargeTileStyle" TargetType="Controls:Tile">
            <Setter Property="Height" Value="125" />
            <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
            <Setter Property="TitleFontSize" Value="14" />
            <Setter Property="Width" Value="300" />
        </Style>

        <Style x:Key="SmallTileStyle" TargetType="Controls:Tile">
            <Setter Property="Height" Value="125" />
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
            <Setter Property="TitleFontSize" Value="10" />
            <Setter Property="Width" Value="147" />
        </Style>

        <ObjectDataProvider x:Key="VoiceCallType_dict"
                            MethodName="GetVoiceCallType" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="ResistorContactType_dict"
                            MethodName="GetResistorContactType" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="KeyswitchTypes_dict"
                            MethodName="GetKeyswitchType" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="AreasNumber_dict"
                            MethodName="GetPartitions" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="EventsTime_dict"
                            MethodName="GetEventsTime" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="AudioMessages_dict"
                            MethodName="GetAudioMessages" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="ImagesLocation_dict"
                            MethodName="GetLocationImages" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="UserRoles_dict"
                            MethodName="GetUserRole" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="CircuitTypes_dict"
                            MethodName="GetCircuitType" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="ResistorValues_dict"
                            MethodName="GetResistorValue" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="CircuitFunction_dict"
                            MethodName="GetCircuitFunction" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="CircuitFunctionWOZone_dict"
                            MethodName="GetCircuitFunctionWithoutZone" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="OutputNumber_dict"
                            MethodName="GetOutputNumber" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="KeypadFunctionButtons_dict"
                            MethodName="GetKeypadFunctionButtons" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="KeypadHourTypes_dict"
                            MethodName="GetKeypadHourType" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="KeypadDateTypes_dict"
                            MethodName="GetKeypadDateType" ObjectType="{x:Type local:Dictionaries}"/>
        <ObjectDataProvider x:Key="TamperType_dict"
                            MethodName="GetTamperType" ObjectType="{x:Type local:Dictionaries}"/>

        <ProdigyConfigToolWPF:defaultDataSet x:Key="databaseDataSet"/>

        <CollectionViewSource x:Key="clientInfoViewSource" Source="{Binding MainInfo, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="zoneViewSource" Source="{Binding Zone, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="areaViewSource" Source="{Binding Area, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="userViewSource" Source="{Binding User, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="keypadViewSource" Source="{Binding Keypad, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="outputViewSource" Source="{Binding Output, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="timezoneViewSource" Source="{Binding Timezone, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="phoneViewSource" Source="{Binding Phone, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="dialerViewSource" Source="{Binding Dialer, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="globalSystemViewSource" Source="{Binding GlobalSystem, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="eventViewSource" Source="{Binding Event, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="AudioCustomizedViewSource" Source="{Binding AudioCustomized, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="AudioDefaultViewSource" Source="{Binding AudioDefault, Source={StaticResource databaseDataSet}}"/>
        <CollectionViewSource x:Key="AudioSystemConfigurationViewSource" Source="{Binding AudioSystemConfiguration, Source={StaticResource databaseDataSet}}"/>
    </Controls:MetroWindow.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="New" Executed="NewCommand_Executed"></CommandBinding>
        <CommandBinding Command="Open" Executed="OpenCommand_Executed"></CommandBinding>
        <CommandBinding Command="Save" Executed="SaveCommand_Executed"></CommandBinding>
        <CommandBinding Command="SaveAs" Executed="SaveAsCommand_Executed"></CommandBinding>
        <CommandBinding Command="Close" Executed="CloseCommand_Executed"></CommandBinding>
    </Window.CommandBindings>

    <Grid>
        <!--FILE MENU-->
        <DockPanel x:Name="BaseFileMenuDockPanel" VerticalAlignment="Top" Background="Black">
            <Menu x:Name="BaseFileMenu" DockPanel.Dock="Top" Height="35" Width="Auto" >
                <!--TODO: Add names-->
                <MenuItem Header="{x:Static p:Resources.File}" Foreground="Black" Margin="2" Checked="MenuItem_Checked" SubmenuOpened="MenuItem_SubmenuOpened">
                    <MenuItem Header="{x:Static p:Resources.Menu_item_New}" Command="ApplicationCommands.New" >
                        <MenuItem.Icon>
                            <Image Source="/images/filemenu/new.png" Height="25" Width="25" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="{x:Static p:Resources.Menu_item_Open}" Command="ApplicationCommands.Open" >
                        <MenuItem.Icon>
                            <Image Source="/images/filemenu/open.png" Height="25" Width="25" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="{x:Static p:Resources.Menu_item_Save}" x:Name="MenuItemSave" Command="ApplicationCommands.Save" IsEnabled="False" >
                        <MenuItem.Icon>
                            <Image Source="/images/filemenu/save.png" Height="25" Width="25" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Command="ApplicationCommands.SaveAs" Visibility="Visible" >
                        <MenuItem.Icon>
                            <Image Source="/images/filemenu/save_as.png" Height="25" Width="25" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="{x:Static p:Resources.Menu_item_Exit}" Command="ApplicationCommands.Close">
                        <MenuItem.Icon>
                            <Image Source="/images/filemenu/on-off.png" Height="20" Width="20" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="{x:Static p:Resources.Tools}" Foreground="Black" Margin="2" Checked="MenuItem_Checked" SubmenuOpened="MenuItem_SubmenuOpened">
                    <MenuItem Header="{x:Static p:Resources.Restore_default_configuration}" Click="RestoreDefaultMenuItem_Click" >
                        <MenuItem.Icon>
                            <Image Source="/images/filemenu/restore.png" Height="20" Width="20" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--TOP RIGHT TILES-->
        <DockPanel x:Name="TOP_RIGHT_TILES" Margin="0,0,0,0" Background="White" VerticalAlignment="Top" HorizontalAlignment="Right" Height="40" Width="Auto" DataContext="{StaticResource keypadViewSource}" Opacity="0.9">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="40" HorizontalAlignment="Right">
                <Label x:Name="ConfigFileName" Foreground="Gray" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,4"/>
            </StackPanel>   
        </DockPanel>

        <DockPanel x:Name="TopBarRight" Margin="0,0,0,0" Background="White" VerticalAlignment="Top" HorizontalAlignment="Right" Height="40" Width="Auto" DataContext="{StaticResource keypadViewSource}" Opacity="0.9">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="40" HorizontalAlignment="Right">
                <Controls:Tile x:Name="SettingsTile" Width="Auto" Height="30" TitleFontSize="10" HorizontalContentAlignment="Left" 
                                       VerticalAlignment="Top" VerticalContentAlignment="Top" Background="White" Click="TitleBarSettingsButton_Click" HorizontalTitleAlignment="Right"
                                       Foreground="Gray">
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/images/toprightbar/preferences.png" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text="{x:Static p:Resources.Settings}" VerticalAlignment="Center" Margin="5,0,5,0" />
                    </StackPanel>
                </Controls:Tile>
             
            </StackPanel>   
        </DockPanel>

        <DockPanel x:Name="TopBarRight" Margin="0,0,0,0" Background="White" VerticalAlignment="Top" HorizontalAlignment="Right" Height="40" Width="Auto" DataContext="{StaticResource keypadViewSource}" Opacity="0.9">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="40" HorizontalAlignment="Right">
                <Label x:Name="ConfigFileName" Foreground="Gray" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,4"/>
                <GridSplitter Width="1" Background="LightGray" Height="14" VerticalAlignment="Center" Margin="0,0,5,0" />
                <Controls:Tile x:Name="HelpTile" Width="Auto" Height="30" TitleFontSize="10" HorizontalContentAlignment="Left" 
                                               VerticalAlignment="Top" VerticalContentAlignment="Top" Background="White" Click="TitleBarHelpButton_Click" HorizontalTitleAlignment="Right"
                                               Foreground="Gray">
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/images/topbaricons/help.png" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text="{x:Static p:Resources.Help}" VerticalAlignment="Center" Margin="5,0,5,0" />
                    </StackPanel>
                </Controls:Tile>
                <GridSplitter Width="1" Background="LightGray" Height="14" VerticalAlignment="Center" Margin="0,0,5,0" />
                <Controls:Tile x:Name="LogoutTile" Width="Auto" Height="30" TitleFontSize="10" HorizontalContentAlignment="Left" 
                                       VerticalAlignment="Top" VerticalContentAlignment="Top" Background="White" Click="TitleBarLogoutButton_Click" HorizontalTitleAlignment="Right"
                                       Foreground="Gray">
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/images/toprightbar/logout.png" Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <TextBlock Text="{x:Static p:Resources.Logout}" VerticalAlignment="Center" Margin="5,0,5,0" />
                    </StackPanel>
                </Controls:Tile>
            </StackPanel>
        </DockPanel>

        <!--TILES-->
        <DockPanel x:Name="TOP_TILES" Margin="0,36,0,0" Background="#FF444444" VerticalAlignment="Top" Height="40" DataContext="{StaticResource keypadViewSource}" Opacity="0.9">
            <!--Utilities menu-->
            <!--TILES-->
            <Controls:Tile x:Name="DownloadTile"  Width="150" Height="34" Title="{x:Static p:Resources.Download}" TitleFontSize="12" HorizontalTitleAlignment="Right" 
                           VerticalAlignment="Center" Background="LightGray" Click="DownloadTile_Click" HorizontalAlignment="Left" Foreground="Black" FontWeight="Bold">
                <Image Source="/images/toptiles/download.png" Margin="-10,0,0,0"/>

            </Controls:Tile>
            <Controls:Tile x:Name="UploadTile"  Width="150" Height="34" Title="{x:Static p:Resources.Upload}" TitleFontSize="12" HorizontalTitleAlignment="Right" VerticalContentAlignment="Center" 
                           VerticalAlignment="Center" Background="LightGray" Click="UploadTile_Click" Margin="0,0,0,0" HorizontalAlignment="Left" Foreground="Black" FontWeight="Bold">
                <Image Source="/images/toptiles/upload.png" Margin="-10,0,0,0"/>
            </Controls:Tile>
            <Controls:Tile x:Name="COMsettings"  Width="150" Height="34" Title="{x:Static p:Resources.ComSettings}" TitleFontSize="12" HorizontalTitleAlignment="Right" 
                           VerticalContentAlignment="Center" Background="LightGray" Click="ComConfigTile_Click" Margin="3,0,0,0" Foreground="Black">
                <Image Source="/images/toptiles/connect.png" Margin="-10,0,0,0"/>
            </Controls:Tile>
            <Controls:Tile x:Name="UpdateDateHour" Width="150" Height="34" Title="{x:Static p:Resources.UpdateDateTime}" TitleFontSize="12" HorizontalTitleAlignment="Right" 
                           Background="LightGray" Foreground="Black" Click="UpdateDateHourTile_Click" Margin="3,0,0,0" VerticalContentAlignment="Center">

                <Image Source="/images/toptiles/updatetime.png" Margin="-10,0,0,0"/>
            </Controls:Tile>
            <Controls:Tile x:Name="ReadFWUpdateData" Width="150" Height="34" Title="Read Update" TitleFontSize="12" HorizontalTitleAlignment="Right" 
                           Background="LightGray" Foreground="Black" Click="read_update_Click" HorizontalAlignment="Left">
                <Image Source="/images/toptiles/readupdate.png" Margin="-10,0,0,0"/>
            </Controls:Tile>
            <!--TOP RIGHT INFO-->
            <Grid x:Name="TOP_RIGHT_LABELS_Info" HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="20" />
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions >
                <Label x:Name="SerialNumberLabel" Grid.Column="0" Grid.Row="0" Content="{x:Static p:Resources.Serial_Number}" FontSize="9" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"></Label>
                <Label x:Name="SerialNumberValueLabel" Grid.Column="0" Grid.Row="1" FontSize="9" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"  Foreground="White"></Label>
                <Label x:Name="HWNumberLabel" Grid.Column="1" Grid.Row="0" Content="{x:Static p:Resources.Hw_Version}" FontSize="9" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"  Foreground="White"></Label>
                <Label x:Name="HWNumberValueLabel" Grid.Column="1" Grid.Row="1" FontSize="9" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"  Foreground="White" ></Label>
                <Label x:Name="FWNumberLabel" Grid.Column="2" Grid.Row="0" Content="{x:Static p:Resources.FW_version}" FontSize="9" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"  Foreground="White"></Label>
                <Label x:Name="FWNumberValueLabel" Grid.Column="2" Grid.Row="2" FontSize="9" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center"  Foreground="White"></Label>
            </Grid>

        </DockPanel>
        <!--CONTENT-->
        <DockPanel x:Name="BaseFrame" Margin="190,80,0,35" DataContext="{StaticResource zoneViewSource}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True" 
                   ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="WhiteSmoke">
            <TabControl x:Name="MainTabControl" HorizontalContentAlignment="Center" Background="WhiteSmoke" Height="Auto" 
                        SelectedIndex="{Binding Mode=OneWay, Source={StaticResource eventViewSource}}" SelectionChanged="MainTabControl_SelectionChanged" >
                <!--HOME-->
                <TabItem x:Name="MainHomeTab" Header="{x:Static p:Resources.Home}" Visibility="Collapsed" ScrollViewer.CanContentScroll="True">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15,-80,0,0">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="220*"/>
                                <RowDefinition Height="600*"/>
                            </Grid.RowDefinitions>
                            <!--HEADER-->
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="35" FontWeight="Light" Foreground="{DynamicResource BlackBrush}"
                                       Text="{x:Static p:Resources.ProdigyConfigurator}" />
                            <!--PANEL-->
                            <WrapPanel Grid.Row="1" Grid.Column="1" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="WhiteSmoke" Margin="30">
                                <!--OLD DESIGN-->
                                <!--<Controls:Tile Title="{x:Static p:Resources.Keypads}"
                                               x:Name="Open_Keypads" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Keypads_Click">
                                    <Image Source="/images/kpad2 copy.png" Width="60" Height="60"/>
                                </Controls:Tile>-->
                                <!--<<-  1 AREAS-->
                                <Controls:Tile Title="{x:Static p:Resources.Areas}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Areas" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="300" Click="Open_Areas_Click">
                                    <Image Source="/images/new/areas.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  2 ZONES-->
                                <Controls:Tile Title="{x:Static p:Resources.Zones}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Zones" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="300" Click="Open_Zones_Click">
                                    <Image Source="/images/new/zones2.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  3 KEYPADS-->
                                <Controls:Tile Title="{x:Static p:Resources.Keypads}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Keypads" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Keypads_Click">
                                    <Image Source="/images/new/keypad.png" Width="80" Height="80"/>
                                </Controls:Tile>
                                <!--<<-  4 OUTPUTS-->
                                <Controls:Tile Title="{x:Static p:Resources.Outputs}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Outputs" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Outputs_Click">
                                    <Image Source="/images/new/outputs.png" Width="80" Height="80" Margin="20,0,0,0"/>
                                </Controls:Tile>
                                <!--<<-  5 TIMEZONES-->
                                <Controls:Tile Title="{x:Static p:Resources.Timezones}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Timezones" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Timezones_Click">
                                    <Image Source="/images/new/timezone.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  6 USERS-->
                                <Controls:Tile Title="{x:Static p:Resources.Users}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Users" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Users_Click">
                                    <Image Source="/images/new/user.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  7 PHONES-->
                                <Controls:Tile Title="{x:Static p:Resources.Phones}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Phones" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Phones_Click">
                                    <Image Source="/images/new/phone.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  8 DIALER-->
                                <Controls:Tile Title="{x:Static p:Resources.Dialer}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Dialer" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Dialer_Click">
                                    <Image Source="/images/new/dialer.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  9 GLOBAL SYSTEM-->
                                <Controls:Tile Title="{x:Static p:Resources.GlobalSystemConfiguration}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_GlobalConfig" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_GlobalConfig_Click">
                                    <Image Source="/images/new/settings.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  10 CLIENT-->
                                <Controls:Tile Title="{x:Static p:Resources.ClientInfo}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_ClientInfo" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_ClientInfo_Click">
                                    <Image Source="/images/new/clientinfo.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  11 EVENTS-->
                                <Controls:Tile Title="{x:Static p:Resources.Events}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Expansors" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Events_Click">
                                    <Image Source="/images/new/events2.png" Width="80" Height="80" Margin="10,0,0,0"/>
                                </Controls:Tile>
                                <!--<<-  12 AUDIO-->
                                <Controls:Tile Title="{x:Static p:Resources.descriptionAudio}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Audio" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Audio_Click">
                                    <Image Source="/images/new/audio.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  13 STATUS-->
                                <Controls:Tile Title="{x:Static p:Resources.Status}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               x:Name="Open_Status" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" 
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Status_Click">
                                    <Image Source="/images/new/status.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  14 DEBUG (Only Admin) -->
                                <Controls:Tile Title="Debug"
                                               x:Name="Open_Debug" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_Debug_Click">
                                    <Image Source="/images/new/debug.png" Width="80" Height="80" />
                                </Controls:Tile>
                                <!--<<-  15 FW UPDATE(Only Admin) -->
                                <Controls:Tile Title="{x:Static p:Resources.FirmwareUpdate}"
                                               x:Name="Open_FirmwareUpdate" Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource BlackBrush}" Background="WhiteSmoke" Foreground="Black" BorderBrush="LightGray" BorderThickness="1"
                                               TitleFontSize="10" Margin="3" Height="125" Width="147" Click="Open_FWUpdate_Click">
                                    <Image Source="/images/new/update.png" Width="80" Height="80" />
                                </Controls:Tile>
                            </WrapPanel>
                        </Grid>
                    </ScrollViewer>

                </TabItem>
                <!--ZONES-->
                <TabItem x:Name="MainZonesTab" Header="Zones" Visibility="Hidden" >
                    <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Margin="0,-60,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="800*"/>
                        </Grid.RowDefinitions>
                        <!--HEADER-->
                        <Grid x:Name="ZonesHeader" Grid.Column="0" Grid.Row="0" Margin="20,10,0,10" VerticalAlignment="Center">
