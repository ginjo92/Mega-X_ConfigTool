    <Grid>
        <!--FILE MENU-->
        <DockPanel x:Name="BaseFileMenuDockPanel" VerticalAlignment="Top">
            <Menu x:Name="BaseFileMenu" DockPanel.Dock="Top" Height="35" Width="Auto" Background="#FFCDC9C9" Opacity="0.5">
